<Page
    x:Class="App4.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/bck/22.jpg" Opacity="0.15"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Left" Height="31" Margin="0,-31,0,0" VerticalAlignment="Top" Width="823" Fill="{ThemeResource SystemControlBackgroundAccentBrush}"/>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="16,10,0,0" Text="Player 1 (X)" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Foreground="White" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="16,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" FocusVisualPrimaryBrush="White" Foreground="White"><Run Text="Player 2 (O)"/><LineBreak/><Run/></TextBlock>
        <TextBox x:ConnectionId='2' x:Name="plyr1" HorizontalAlignment="Left" Height="32" Margin="112,10,0,0" Text="Player 1" VerticalAlignment="Top" Width="228"/>
        <TextBox x:ConnectionId='3' x:Name="plyr2" HorizontalAlignment="Left" Height="32" Margin="112,43,0,0" Text="Player 2" VerticalAlignment="Top" Width="228"/>
        <Grid HorizontalAlignment="Left" Height="320" Margin="21,190,0,0" VerticalAlignment="Top" Width="320">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.9"/>
            </Grid.Background>
            <Button x:ConnectionId='8' x:Name="a11" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Foreground="White" Background="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="36" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='9' x:Name="a12" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="100" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='10' x:Name="a13" Content="" HorizontalAlignment="Left" Height="100" Margin="220,0,0,0" VerticalAlignment="Top" Width="100" Foreground="White" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='11' x:Name="a21" Content="" HorizontalAlignment="Left" Height="100" VerticalAlignment="Center" Width="100" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='12' x:Name="a22" Content="" HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="100" Foreground="White" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='13' x:Name="a23" Content="" HorizontalAlignment="Left" Height="100" Margin="220,0,0,0" VerticalAlignment="Center" Width="100" Foreground="White" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='14' x:Name="a31" Content="" HorizontalAlignment="Left" Height="100" Margin="0,220,0,0" VerticalAlignment="Top" Width="100" Foreground="White" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='15' x:Name="a32" Content="" HorizontalAlignment="Center" Height="100" Margin="0,220,0,0" VerticalAlignment="Top" Width="100" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Button x:ConnectionId='16' x:Name="a33" Content="" HorizontalAlignment="Left" Height="100" Margin="220,220,0,0" VerticalAlignment="Top" Width="100" Foreground="White" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="36" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
        </Grid>
        <Button x:ConnectionId='4' x:Name="clr" Content="RESET" HorizontalAlignment="Left" Height="43" Margin="240,112,0,0" VerticalAlignment="Top" Width="100" Background="{ThemeResource SystemControlBackgroundAccentBrush}" FontSize="16"/>
        <TextBox x:ConnectionId='5' x:Name="w" HorizontalAlignment="Left" Height="63" Margin="21,553,0,0" Text="" VerticalAlignment="Top" Width="319" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="24"/>
        <Button x:ConnectionId='6' Content="( i )" HorizontalAlignment="Left" Height="48" Margin="290,616,0,0" VerticalAlignment="Top" Width="50"                      Background="#33000000"/>
        <TextBlock x:ConnectionId='7' x:Name="v" HorizontalAlignment="Left" Height="43" Margin="21,621,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" FontSize="14"/>

    </Grid>
</Page>

